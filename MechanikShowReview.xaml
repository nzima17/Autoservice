<Window x:Class="Autoservice.MechanikShowReview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autoservice"
        mc:Ignorable="d"
        Title="MechanikShowReview" Height="420" Width="500">
    <Grid Background="Goldenrod">
        <Label Content="Авто Мастерская Экспресс" HorizontalAlignment="Left" Margin="88,33,0,0" VerticalAlignment="Top" FontFamily="Impact" Foreground="#FFF9F9F9" FontSize="20" Height="34" Width="242"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="316,0,0,0" VerticalAlignment="Top" Width="100" Source="/mechanic.png"/>
        <Label Content="Отзывы." HorizontalAlignment="Center" Margin="0,104,0,0" VerticalAlignment="Top" FontFamily="Impact" Foreground="#FFF9F9F9" FontSize="18" Height="32" Width="80"/>
        <Button Content="Вернуться на главный экран" HorizontalAlignment="Center" Margin="0,355,0,0" Background="Goldenrod" BorderBrush="#FFF9F9F9" FontFamily="Adobe Caslon Pro Bold" FontSize="17" Foreground="#FFF9F9F9" Width="480" Click="Button_Click" Height="25" VerticalAlignment="Top" />
        <DataGrid x:Name="review" Margin="10,136,10,54" ColumnWidth="100" IsReadOnly="True" />
    </Grid>
</Window>
